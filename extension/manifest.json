{
    "manifest_version": 3,
    "name": "ARK Agent AGI Client",
    "version": "1.0",
    "description": "Interact with ARK Agent AGI from your browser",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}