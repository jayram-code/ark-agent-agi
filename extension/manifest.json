{
    "manifest_version": 3,
    "name": "ARK Agent AGI Client",
    "description": "Interact with ARK Agent AGI from your browser and analyze emails.",
    "version": "1.1",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "http://localhost:8080/*",
        "https://*.run.app/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "ARK Enterprise"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}