# Environment Configuration Template
# Copy this file to .env and fill in your values

# ==== REQUIRED ====
GOOGLE_API_KEY=your_google_api_key_here

# ==== OPTIONAL - BUILT-IN TOOLS ====
# Google Search Tool
GOOGLE_SEARCH_API_KEY=your_google_search_api_key
GOOGLE_CSE_ID=your_custom_search_engine_id

# Weather Tool
OPENWEATHER_API_KEY=your_openweather_api_key

# Email/SMTP Tool
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password

# ==== OPTIONAL - EXTERNAL INTEGRATIONS ====
# Shipping API
SHIPPING_API_URL=https://api.shipping.example.com
SHIPPING_API_KEY=your_shipping_api_key

# CRM/Ticketing System (for ConnectorAgent)
CRM_API_URL=https://api.crm.example.com
CRM_API_KEY=your_crm_api_key

# ==== OPTIONAL - INFRASTRUCTURE ====
# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
CENTRALIZED_LOG_SINK=stackdriver  # or cloudwatch, splunk, etc.

# Database
DB_PATH=data/ark_agent.db
MEMORIES_DB_PATH=data/memories.db

# Tracing
ENABLE_TRACING=true

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_CALLS_PER_SECOND=10
